<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolBarConstraintLayoutExpanded"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="#5479f1">


    <ImageView
        android:id="@+id/chat_page_toolbar_back_button"
        android:layout_width="16dp"
        android:layout_height="27dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/path" />

    <TextView
        android:id="@+id/char_page_toolbar_full_name_tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Sayed Eftiaz"
        android:textColor="@color/white"
        android:textSize="29sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/chat_page_toolbar_back_button"
        app:layout_constraintTop_toTopOf="@+id/chat_page_toolbar_back_button" />

    <TextView
        android:id="@+id/chat_page_proffesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Manager"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/char_page_toolbar_full_name_tw"
        app:layout_constraintTop_toBottomOf="@+id/char_page_toolbar_full_name_tw" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgb_avatar_wrap"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginEnd="32dp"
        android:src="@drawable/send"
        app:civ_border_color="#63a7f5"
        app:civ_border_width="1.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/char_page_toolbar_full_name_tw" />


</androidx.constraintlayout.widget.ConstraintLayout>